{
    "manifest_version": 3,
    "name": "X Semi-Auto Support",
    "version": "1.0",
    "description": "Send X posts to Gemini for reply generation.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://x.com/*",
        "https://twitter.com/*",
        "http://localhost:3000/*",
        "https://*.web.app/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://x.com/*",
                "https://twitter.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}